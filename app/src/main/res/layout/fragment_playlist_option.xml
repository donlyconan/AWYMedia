<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="10dp"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_fragment">


    <TextView
        android:id="@+id/btn_open"
        style="@style/BottomMenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/outline_play_circle_24"
        android:text="Xem" />

    <TextView
        android:id="@+id/btn_add"
        style="@style/BottomMenuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_add_24"
        android:text="Thêm video" />


    <TextView
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/outline_delete_24"
        android:text="Xóa danh sách phát"
        style="@style/BottomMenuItem"
        />

</LinearLayout>