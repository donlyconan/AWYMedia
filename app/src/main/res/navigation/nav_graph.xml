<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/mainDisplayFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.utc.donlyconan.media.views.fragments.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" />

    <fragment
        android:id="@+id/mainDisplayFragment"
        android:name="com.utc.donlyconan.media.views.fragments.MainDisplayFragment"
        android:label="fragment_main_display"
        tools:layout="@layout/fragment_main_display" >

        <action
            android:id="@+id/action_mainDisplayFragment_to_videoDisplayFragment"
            app:destination="@id/videoDisplayFragment" />
        <action
            android:id="@+id/action_mainDisplayFragment_to_actionBottomDialogFragment2"
            app:destination="@id/actionBottomDialogFragment" />
        <action
            android:id="@+id/action_mainDisplayFragment_to_searchBarFragment"
            app:destination="@id/searchBarFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoDisplayFragment"
        android:name="com.utc.donlyconan.media.views.fragments.VideoDisplayFragment"
        android:label="VideoDisplayFragment"
        tools:layout="@layout/activity_video_display">

        <argument
            android:name="videoUri"
            app:argType="string" />
        <argument
            android:name="startAt"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/actionBottomDialogFragment"
        android:name="com.utc.donlyconan.media.views.fragments.options.OptionBottomDialogFragment"
        android:label="ActionBottomDialogFragment"
        tools:layout="@layout/fragment_optional_selection"/>

    <fragment
        android:id="@+id/searchBarFragment"
        android:name="com.utc.donlyconan.media.views.fragments.SearchBarFragment"
        android:label="fragment_search_bar"
        tools:layout="@layout/fragment_search_bar" />
</navigation>