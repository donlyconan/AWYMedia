<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.utc.donlyconan.media">

<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
    android:maxSdkVersion="32" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
    android:maxSdkVersion="32" />
<uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
<uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
<uses-permission android:name="android.permission.android.permission.WAKE_LOCK" />

<application
    android:name=".app.EGMApplication"
    android:allowBackup="true"
    android:icon="@drawable/ic_logo"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.AWYMedia">

    <activity
        android:name=".views.MainActivity"
        android:exported="true"
        android:launchMode="singleTop">
        <nav-graph android:value="@navigation/nav_graph" />
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity
        android:name=".views.VideoDisplayActivity"
        android:exported="true"
        android:launchMode="singleInstance">
        <intent-filter android:scheme="http">
            <action android:name="android.intent.action.VIEW"/>
            <category android:name="android.intent.category.DEFAULT"/>
            <category android:name="android.intent.category.BROWSABLE"/>
            <category android:name="android.intent.category.OPENABLE"/>
            <data android:scheme="http"/>
            <data android:scheme="https"/>
            <data android:mimeType="video/.mp4"/>
<!--            <data android:mimeType="video/webm"/>-->
<!--            <data android:mimeType="video/ismv"/>-->
<!--            <data android:mimeType="video/m3u8"/>-->
<!--            <data android:mimeType="video/flv"/>-->
        </intent-filter>
    </activity>

    <activity
        android:name=".views.SettingsActivity"
        android:exported="true"
        android:launchMode="singleTop" />

    <service
        android:name=".app.services.EGMService"
        android:exported="false" />


    <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts" />

</application>


</manifest>
